.messages {
  padding: 60rpx 20rpx;
}


.messages .item {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  padding: 20rpx 35rpx;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  background-color: #fff;
}

.messages .item:last-child {
  margin-bottom: 0;
}

.messages .item .title {
  font-size: 40rpx;
  color: #222;
}


.messages .item image {
  width: 100%;
  height: 300rpx;
  margin: 10rpx 0;
}

